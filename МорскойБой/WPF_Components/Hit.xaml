<UserControl x:Class="Battleships.Hit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Battleships"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Height="30">
        <Label>Нанесено попаданий:</Label>
        <TextBlock x:Name="tb_Hits" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="59,0,0,0" RenderTransformOrigin="-0.167,0.488">0</TextBlock>
        <Label>Получено попаданий:</Label>
        <TextBlock x:Name="tb_Hits_my" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="27.4,0,0,0">0</TextBlock>
    </StackPanel>
</UserControl>
